{
  "version": 2,
  "buildCommand": "echo 'Building CommonJS API...' && npm install",
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node@3.0.27",
      "config": {
        "includeFiles": ["api/**/*"],
        "excludeFiles": ["**/*.mjs", "**/*.esm.js", "vite.config.ts", "src/**/*"],
        "runtime": "nodejs18.x",
        "outputDirectory": ".vercel/output",
        "zeroConfig": false,
        "typescript": {
          "module": "commonjs",
          "target": "es2020",
          "moduleResolution": "node",
          "esModuleInterop": true,
          "allowSyntheticDefaultImports": true,
          "skipLibCheck": true,
          "forceConsistentCasingInFileNames": true
        },
        "environment": {
          "NODE_ENV": "production",
          "FORCE_COMMONJS": "true"
        }
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    }
  ],
  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs18.x",
      "memory": 1024,
      "maxDuration": 10,
      "environment": {
        "NODE_ENV": "production",
        "FORCE_COMMONJS": "true"
      }
    }
  },
  "env": {
    "NODE_ENV": "production",
    "FORCE_COMMONJS": "true"
  },
  "build": {
    "env": {
      "NODE_ENV": "production",
      "FORCE_COMMONJS": "true"
    }
  }
}